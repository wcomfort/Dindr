
<h1>Please Select A Recipe to Review</h1>
<%= form_for @review do |f| %>
<%=f.collection_select :recipe_id, Recipe.all, :id, :name%> <br><br>
<%=f.text_area :content, class: 'formcontrol' %> <br>
<%=f.hidden_field :user_id, :value=>session[:user_id]%><br><br>
<%= f.submit "Create Review", class: "button" %>
<%end%>