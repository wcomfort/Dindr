<!DOCTYPE html>
<html>
  <head>
    <title>Dindr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0c8686bdcb.js" crossorigin="anonymous"></script>
    
  </head>
  
  <body>
   
   <div class="topnav">
      <a id="logo-text" href="/"><i class="fas fa-utensils fa-2x"></i> DINDR: IDK what do you want?</a>
      <% if session[:user_id] %> 
      <a href="/about">About</a>
      <%= link_to "My Account", user_path(session[:user_id]) %>
      <a href="/recipes">Recipes</a>
      <a href="/flavor_profiles">Cuisines</a>
      <a href="/tastes">Tastes</a>
      <a href="/logout">Logout</a>
      <% end %>
    </div>

    <% if notice %>
    <div class="notice"><%= notice %></div>
  <% end %>
  
    <%= yield %>
   
  </body>
</html>
